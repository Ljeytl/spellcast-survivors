    "spawn_probability_formulas": {
      "rarity_weights": {
        "common": "100",
        "uncommon": "60", 
        "rare": "30",
        "epic": "15",
        "legendary": "5"
      },
      "tier_availability": "monster.unlock_difficulty <= difficulty_level",
      "archetype_bias": {
        "normal": "100 - difficulty_level * 5",
        "swarmer": "50 + difficulty_level * 8", 
        "shooter": "max(0, 20 + (difficulty_level - 2) * 15)",
        "elite": "max(0, (difficulty_level - 3) * 20)"
      }
    },
    "global_scaling": {
      "time_difficulty_curve": "1 + log(1 + time_seconds / 120) * 0.5",
      "chaos_factor": "sin(time_seconds / 100) * 0.1 + 0.9",
      "intensity_spike_formula": "1 + 0.3 * sin(time_seconds / 200)",
      "variety_scaling": "min(5, 1 + floor(time_seconds / 150))"
    },
