{
  "monster_configuration": {
    "mathematical_formulas": {
      "difficulty_level": "floor(time_seconds / 60) + 1",
      "base_multiplier": "1 + (difficulty_level - 1) * 0.15",
      "elite_spawn_chance": "min(0.4, max(0, (difficulty_level - 3) * 0.1))",
      "swarmer_group_multiplier": "1 + difficulty_level * 0.2"
    },
    "monster_archetypes": {
      "normal": {
        "health_formula": "base_health * base_multiplier * (1 + 0.05 * floor(time_seconds / 45))",
        "speed_formula": "base_speed * (1 + 0.02 * floor(time_seconds / 90))",
        "damage_formula": "base_damage * base_multiplier",
        "xp_formula": "base_xp * sqrt(health_multiplier)",
        "spawn_weight_formula": "100 - difficulty_level * 10",
        "behavior": "direct_chase"
      },
      "elite": {
        "health_formula": "base_health * 2.5 * base_multiplier * (1 + 0.05 * floor(time_seconds / 45))",
        "speed_formula": "base_speed * 0.8 * (1 + 0.02 * floor(time_seconds / 90))",
        "damage_formula": "base_damage * 2.0 * base_multiplier",
        "xp_formula": "base_xp * 3 * sqrt(health_multiplier)",
        "spawn_weight_formula": "max(0, 30 - abs(difficulty_level - 4) * 10)",
        "behavior": "aggressive_chase",
        "special_abilities": true
      },
      "swarmer": {
        "health_formula": "base_health * 0.6 * base_multiplier * (1 + 0.05 * floor(time_seconds / 45))",
        "speed_formula": "base_speed * 1.4 * (1 + 0.02 * floor(time_seconds / 90))",
        "damage_formula": "base_damage * 0.7 * base_multiplier",
        "xp_formula": "base_xp * 0.8 * sqrt(health_multiplier)",
        "spawn_weight_formula": "50 + difficulty_level * 5",
        "group_size_formula": "floor(2 + difficulty_level * swarmer_group_multiplier)",
        "behavior": "swarm_chase"
      },
      "shooter": {
        "health_formula": "base_health * 1.2 * base_multiplier * (1 + 0.05 * floor(time_seconds / 45))",
        "speed_formula": "base_speed * 0.9 * (1 + 0.02 * floor(time_seconds / 90))",
        "damage_formula": "base_damage * 1.3 * base_multiplier",
        "xp_formula": "base_xp * 1.5 * sqrt(health_multiplier)",
        "spawn_weight_formula": "max(0, 40 - abs(difficulty_level - 3) * 8)",
        "attack_range_formula": "150 + difficulty_level * 20",
        "projectile_speed_formula": "100 + difficulty_level * 10",
        "behavior": "ranged_kiting"
      }
    },
